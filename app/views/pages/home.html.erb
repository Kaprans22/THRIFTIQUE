<h1 class="home-title my-4 mx-5">Welcome to Thriftique!</h1>
<br>

<br>

<div class="product-list mr-5">
  <% @products.each_with_index do |product, index| %>
    <% if index < 8 %>
      <%= link_to product_path(product) do %>
        <div class="card-product shadow-sm bg-white rounded">
          <% if product.photo.attached? %>
            <%= image_tag product.photo, class: 'product-image rounded-top' %>
          <% end %>
          <div class="card-text d-flex flex-column align-items-end">
            <strong><%= product.name %></strong>
            <%= product.price %>€
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

<div class="spacer_img">
  <div class="image-box">
    <%= link_to products_path(search: 'streetwear') do %>
    <%= image_tag 'Stussy_Hero.jpg', alt: 'Image 1', class: 'rounded shadow-sm' %>
    <div class="text-overlay top-left">Discover streetwear fashion</div>
    <%= link_to 'Explore', products_path(search: 'streetwear'), class: 'explore-button' %>
    <% end %>
  </div>
  <div class="image-box">
    <%= link_to products_path(search: 'luxury') do %>
    <%= image_tag 'LV_BG.jpg', alt: 'Image 1', class: 'rounded shadow-sm'  %>
    <div class="text-overlay top-right">Browse luxurious Items</div>
    <%= link_to 'Explore', products_path(search: 'luxury'), class: 'explore-button' %>
    <% end %>
  </div>
</div>
<br>

<div class="product-list mr-5">
  <% @products.each_with_index do |product, index| %>
    <% if index >= 8 %>
      <%= link_to product_path(product) do %>
        <div class="card-product shadow-sm bg-white rounded">
          <% if product.photo.attached? %>
            <%= image_tag product.photo, class: 'product-image rounded-top img-fluid' %>
          <% end %>
          <div class="card-text mt-3 d-flex flex-column align-items-end">
            <strong><%= product.name %></strong>
            <%= product.price %>€
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

<br>
<p class="mb-4 mx-5">
  Want to sell something? <%= link_to 'Add your product', new_product_path, class:'btn btn-outline-secondary-color mx-2 my-2 my-sm-0' %>
</p>
<br>
