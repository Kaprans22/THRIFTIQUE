<div class="container my-7 py-6">
  <h1 class="mb-4 d-flex">Sell an item</h1>

  <%= form_with(model: @product, local: true) do |form| %>
    <div class="field m-3 string required name">
      <div class="form-group row">
        <%= form.label :name, class: 'col-sm-2 col-form-label'  %>
          <div class="col-sm-10">
            <%= form.text_field :name, class: 'form-control' %>
          </div>
      </div>
    </div>

    <div class="m-5 p-7"></div>

    <div class="field m-3 string required name">
      <div class="form-group row">
        <%= form.label :description, class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-10 w-100">
            <%= form.text_area :description, class: 'form-control' %>
          </div>
      </div>
    </div>

    <div class="m-5 p-7"></div>

    <div class="field m-3 string required name">
      <div class="form-group row mb-4">
        <%= form.label :price, class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-2 ">
            <%= form.number_field :price, step: 0.1, class: 'form-control' %>
          </div>
      </div>
    </div>

    <div class="m-5 p-7"></div>

    <div class="field m-3 string required name">
      <div class="form-group row mb-4">
        <%= form.label :image, class: 'col-sm-2 col-form-label' %>
          <div class="col-sm-2">
            <%= form.file_field :image %>
          </div>
      </div>
    </div>

    <div class="m-5 p-7"></div>

    <div class="actions m-3 mt-5">
      <%= form.submit %>
    </div>

    <div class="blank-space"></div>
    <%= link_to "< Back", products_path %>
  <% end %>
</div>

