<!-- app/views/products/show.html.erb -->
  <div class="row mr-5">
    <div class="text-center">
    <h1 class="mt-4 mb-5"><%= @product.name %></h1>
    </div>
    <div class="col-7 text-center">
    <%= image_tag @product.photo, class: "product-image rounded" if @product.photo.attached? %>
    </div>
  <div class="card rounded bg-white col-4" style="width: 18rem;">
      <div class="card-body d-flex flex-column justify-content-between">
        <div class="card-info">
        <h5 class="card-title"><%=@product.price %> â‚¬ </h5>
        <hr>
        <!-- Form submit -->
        <p>Description: <%= @product.description %></p>
        <p>Brand: <%= @product.brand%></p>
        <p>Condition: <%=@product.condition%></p>
        <p>Size: <%=@product.size%></p>
        <p>Listed by: <%= @product.user.email %></p>
        </div>
          <%= simple_form_for([@product, @transaction]) do |form| %>

        <div class="d-grid gap-2 mb-3" role="group" aria-label="Product Actions">
<% if @product.user == current_user %>
  <%= form.submit "Buy Now", class: "btn btn-primary", disabled: true, style: "opacity: 0.5;" %>
<% else %>
  <%= form.submit "Buy Now", class: "btn btn-primary" %>
<% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<div class="row mt-3">
  <div class="col-md-8">
    <!-- Add any additional content here if needed -->
  </div>
</div>
  <div class="col-md-8 back-button" style="padding-left: 220px;">
    <%= link_to 'Back', :back, class: "btn btn-secondary btn-block my-2" %>
  </div>
</div>
